default_platform(:ios)

# App Store Connect API Key
def api_key
  app_store_connect_api_key(
    key_id: "KN4CQZ4P8G",
    issuer_id: "52d3d37b-494c-4d95-afee-3272957150c7",
    key_filepath: "./AuthKey.p8",
    in_house: false
  )
end

platform :ios do
  before_all do
    unless File.exist?("./AuthKey.p8")
      UI.user_error!("AuthKey.p8 not found in fastlane directory. Download from App Store Connect > Users > Keys")
    end
  end

  desc "Push a new build to TestFlight"
  lane :beta do
    ensure_git_status_clean

    # Increment build number based on TestFlight (avoids agvtool issues)
    current_build = latest_testflight_build_number(api_key: api_key)
    new_build = current_build + 1

    increment_build_number(
      build_number: new_build,
      xcodeproj: "trailmark.xcodeproj"
    )

    # Commit version bump BEFORE build (so repo stays clean if build fails)
    commit_version_bump(
      xcodeproj: "trailmark.xcodeproj",
      message: "chore: bump build number to #{new_build}",
      include: ["Info.plist"]
    )

    # Build the app
    build_app(
      project: "trailmark.xcodeproj",
      scheme: "trailmark",
      export_method: "app-store",
      export_xcargs: "-allowProvisioningUpdates",
      clean: true
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )

    # Push to remote
    push_to_git_remote
  end

  desc "Push to TestFlight without version bump"
  lane :beta_no_bump do
    build_app(
      project: "trailmark.xcodeproj",
      scheme: "trailmark",
      export_method: "app-store",
      export_xcargs: "-allowProvisioningUpdates",
      clean: true
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Increment build number only"
  lane :bump do
    current_build = latest_testflight_build_number(api_key: api_key)
    new_build = current_build + 1

    increment_build_number(
      build_number: new_build,
      xcodeproj: "trailmark.xcodeproj"
    )

    commit_version_bump(
      xcodeproj: "trailmark.xcodeproj",
      message: "chore: bump build number to #{new_build}",
      include: ["Info.plist"]
    )
  end

  desc "Run tests"
  lane :test do
    run_tests(
      project: "trailmark.xcodeproj",
      scheme: "trailmark",
      device: "iPhone 16"
    )
  end
end
